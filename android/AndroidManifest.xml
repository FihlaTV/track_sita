<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sita"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.sita.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.sita.SchoolSelectActivity"
            android:label="@string/title_activity_school_select" >
        </activity>
        <activity
            android:name="com.example.sita.TakePictureActivity"
            android:label="@string/title_activity_take_picture" >
        </activity>
        <activity
            android:name="com.example.sita.PlaceActivity"
            android:label="@string/title_activity_place" >
        </activity>
        <activity
            android:name="com.example.sita.ReviewActivity"
            android:label="@string/title_activity_review" >
        </activity>
        <activity
            android:name="com.example.sita.SubmitActivity"
            android:label="@string/title_activity_submit" >
        </activity>
        <activity
            android:name="com.example.sita.StartActivity"
            android:label="@string/title_activity_start" >
        </activity>
        <activity
            android:name="com.example.sita.PushToServerActivity"
            android:label="@string/title_activity_push_to_server" >
        </activity>
        <activity
            android:name="com.example.sita.SaveToLocalActivity"
            android:label="@string/title_activity_save_to_local" >
        </activity>
    </application>

</manifest>
